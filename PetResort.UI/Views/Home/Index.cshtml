@{
    ViewBag.Title = "Home";
}
<div class="wrapper row1">
    <header id="header" class="hoc clear">
        <div id="logo">
            <h1 id="title">
                <a>Imaginary Cage</a>
            </h1>
            <p style="font-family:Sanchez, serif">Mythical Pet Resort</p>
        </div>
    </header>
</div>


    <div class="wrapper bgded overlay" style="background-image:url('/Content/Images/garrett-parker-247225.jpg')">
        <div id="pageintro" class="hoc clear">
            <article class="introtxt">
                <h2 class="heading" id="title">A Safe Space for Fantastic Beasts</h2>
                <p style="font-family:Sanchez, serif">We offer a haven for pets from all walks of life and legend!</p>
                <footer>
                @Html.ActionLink(" Login Here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn inverse medium" })
                    @Html.ActionLink("Enroll Here", "Create", "Pets", routeValues: null, htmlAttributes: new { @class = "btn inverse medium" })
                @*@Html.ActionLink("Enroll Here", "Create", "Pets", htmlAttributes: new { @class = "btn inverse medium" });*@
                </footer>
            </article>
        </div>
    </div>

<div id="container">
